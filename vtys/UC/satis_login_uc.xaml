<UserControl x:Class="vtys.UC.satis_login_uc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vtys.UC"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid Background="#FFF6F6F6">
        <Label Content="Satış Arayüzü Kullanıcı Girişi" Style="{DynamicResource satısuclabel}" Margin="0 0 0 270" Width="auto" HorizontalAlignment="Center" FontSize="18"></Label>
        <TextBox BorderThickness="2" x:Name="satisuc_login_username_tb" Padding="0 5 0 5 " HorizontalAlignment="Center" Margin="0 0 0 140" TextWrapping="Wrap" Text="Kullanıcı Adı..." VerticalAlignment="Center" Width="180" Height="auto" TextAlignment="Center" FontSize="18" GotKeyboardFocus="satisuc_login_username_tb_GotKeyboardFocus" LostKeyboardFocus="satisuc_login_username_tb_LostKeyboardFocus" FontFamily="Cascadia Code" Foreground="LightGray">
        </TextBox>
            <TextBox x:Name="satisuc_login_pass_tb" Padding="0 5 0 5 " HorizontalAlignment="Center" Margin="0,215,0,0" TextWrapping="Wrap" Text="Şifre..." VerticalAlignment="Top" Width="180" Height="auto" TextAlignment="Center" FontSize="18" FontFamily="Cascadia Code" GotKeyboardFocus="satisuc_login_pass_tb_GotKeyboardFocus" LostKeyboardFocus="satisuc_login_pass_tb_LostKeyboardFocus" Foreground="LightGray"/>
        <Button Content="Giriş Yap" Margin="0 70 0 0" Width="auto" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{DynamicResource satiseklebuton}" FontSize="16"/>


    </Grid>
</UserControl>
